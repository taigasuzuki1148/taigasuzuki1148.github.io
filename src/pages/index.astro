---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main class="container">

    <!-- ===== Projects ===== -->
    <section class="section">
      <div class="section-header">
        <div>
          <h1 class="section-title">Projects</h1>
          <p class="section-subtitle">
            Latest work. Explore what I’m building now.
          </p>
        </div>
        <span class="browse">Browse ›</span>
      </div>

      <div class="horizontal-scroll">
        <a href="/projects/quantum-toolkit" class="card-link">
          <div class="scroll-card">
            <h3>Quantum Toolkit</h3>
            <p>
              Visualization tools for quantum measurement.
            </p>
          </div>
        </a>

        <a href="/projects/abl-notes" class="card-link">
          <div class="scroll-card">
            <h3>ABL Notes</h3>
            <p>
              Intuitive explanations of quasi-probabilities.
            </p>
          </div>
        </a>

        <a href="/projects/visual-qm" class="card-link">
          <div class="scroll-card">
            <h3>Visual Quantum Mechanics</h3>
            <p>
              Bridging intuition and formal theory.
            </p>
          </div>
        </a>
      </div>
    </section>

    <!-- ===== Research ===== -->
    <section class="section">
      <div class="section-header">
        <h2 class="section-title">Research</h2>
        <span class="browse">Browse ›</span>
      </div>

      <div class="horizontal-scroll">
        <div class="scroll-card">
          <h3>Measurement Reversal</h3>
          <p>
            Understanding how quantum states can be restored after measurement.
          </p>
        </div>

        <div class="scroll-card">
          <h3>Quasi-probabilities</h3>
          <p>
            ABL and time-symmetric representations.
          </p>
        </div>

        <div class="scroll-card">
          <h3>Visual Explanations</h3>
          <p>
            Making abstract quantum theory intuitive.
          </p>
        </div>
      </div>
    </section>

    <!-- ===== Bottom Nav ===== -->
    <section class="bottom-nav">
      <a href="/notes">Notes</a>
      <a href="/cv">CV</a>
      <a href="/about">About</a>
    </section>

  </main>
</Layout>

<style>
/* ===== Layout ===== */
.container {
  padding: 64px 24px;
  max-width: 1200px;
  margin: auto;
}

.section {
  margin-bottom: 96px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 24px;
}

.section-title {
  font-size: 2.8rem;
  font-weight: 600;
  letter-spacing: -0.02em;
}

.section-subtitle {
  color: var(--text-sub);
  margin-top: 8px;
}

.browse {
  color: var(--accent);
  font-size: 1rem;
  cursor: default;
}

/* ===== Horizontal Scroll ===== */
.horizontal-scroll {
  display: flex;
  gap: 24px;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  padding-bottom: 16px;
}

.horizontal-scroll::-webkit-scrollbar {
  display: none;
}

/* ===== Cards ===== */
.card-link {
  text-decoration: none;
  color: inherit;
}

.scroll-card {
  flex: 0 0 320px;
  scroll-snap-align: start;
  border: 1px solid #e5e5e5;
  border-radius: 16px;
  padding: 28px;
  background: #fff;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.scroll-card h3 {
  font-size: 1.4rem;
  font-weight: 600;
  margin-bottom: 8px;
}

.scroll-card p {
  color: var(--text-sub);
  line-height: 1.6;
}

.scroll-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 16px 32px rgba(0,0,0,0.08);
}

/* ===== Bottom Nav ===== */
.bottom-nav {
  text-align: center;
  margin-top: 96px;
}

.bottom-nav a {
  margin: 0 24px;
  color: var(--accent);
  text-decoration: none;
  font-size: 1rem;
}
</style>